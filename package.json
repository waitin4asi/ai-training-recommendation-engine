{
  "name": "ai-training-recommendation-engine",
  "version": "1.0.0",
  "description": "AI-Powered Training & Upskilling Recommendation Engine with hybrid ML models",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:performance": "artillery run tests/performance/load-test.yml",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "babel src -d dist",
    "docker:build": "docker build -t ai-training-engine .",
    "docker:run": "docker-compose up -d",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "analyze": "npm run test:coverage && npm run lint"
  },
  "keywords": [
    "ai",
    "machine-learning",
    "recommendation-engine",
    "education",
    "upskilling",
    "personalized-learning",
    "nlp",
    "skill-extraction",
    "market-intelligence"
  ],
  "author": "AI Training Engine Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "axios": "^1.5.0",
    "natural": "^6.5.0",
    "ml-matrix": "^6.10.4",
    "compromise": "^14.10.0",
    "node-cron": "^3.0.2",
    "redis": "^4.6.7",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "winston": "^3.10.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "joi": "^17.9.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "csv-parser": "^3.0.0",
    "pdf-parse": "^1.1.1",
    "cheerio": "^1.0.0-rc.12",
    "node-fetch": "^3.3.2",
    "bull": "^4.11.3",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "prettier": "^3.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "artillery": "^2.0.0",
    "@babel/cli": "^7.22.15",
    "@babel/core": "^7.22.15",
    "@babel/preset-env": "^7.22.15",
    "mongodb-memory-server": "^8.15.1",
    "redis-memory-server": "^0.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/waitin4asi/ai-training-recommendation-engine.git"
  },
  "bugs": {
    "url": "https://github.com/waitin4asi/ai-training-recommendation-engine/issues"
  },
  "homepage": "https://github.com/waitin4asi/ai-training-recommendation-engine#readme",
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**",
      "!src/migrations/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  }
}